{
    "name": "ts-utils",
    "displayName": "TS utils",
    "description": "TypeScript utils.",
    "version": "0.1.1",
    "publisher": "lukazakrajsek",
    "repository": {
        "type": "git",
        "url": "https://github.com/bancek/vscode-ts-utils"
    },
    "licenses": [
        {
            "type": "MIT",
            "url": "https://raw.githubusercontent.com/bancek/vscode-ts-utils/master/LICENSE.md"
        }
    ],
    "engines": {
        "vscode": "^1.5.0"
    },
    "categories": [
        "Languages"
    ],
    "keywords": [
        "typescript",
        "utils"
    ],
    "activationEvents": [
        "onLanguage:typescript",
        "onLanguage:typescriptreact"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.formatImports",
                "title": "TS utils: Format imports"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.32",
        "@types/node": "^6.0.40",
        "mocha": "^2.3.3",
        "typescript": "^2.0.3",
        "vscode": "^1.0.0"
    },
    "dependencies": {
        "typescript-format-imports": "^0.1.0"
    }
}
